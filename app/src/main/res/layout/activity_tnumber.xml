<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ff"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="projectandroid.coe.application.Tnumber">

    <TextView
        android:id="@+id/countLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Q1"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="22dp"
        android:textStyle="bold"
        tools:ignore="HardcodedText,SpUsage" />

    <TextView
        android:id="@+id/questionLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_weight="0.07"
        android:text="Question"
        android:textAlignment="center"
        android:textColor="?attr/actionModeSplitBackground"
        android:textSize="36sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText,SpUsage" />

    <Button
        android:id="@+id/answerBtn1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/answerBtn_height"
        android:layout_marginTop="30dp"
        android:layout_weight="0.25"
        android:background="?attr/listChoiceBackgroundIndicator"
        android:backgroundTint="?android:attr/colorControlActivated"
        android:onClick="checkAnswer"
        android:text="Answer1"
        android:textColor="@color/colorAccent"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/answerBtn2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/answerBtn_height"
        android:layout_marginTop="6dp"
        android:layout_weight="0.21"
        android:background="?attr/listChoiceBackgroundIndicator"
        android:backgroundTint="?android:attr/colorControlActivated"
        android:onClick="checkAnswer"
        android:text="Answer2"
        android:textColor="@color/colorAccent"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/answerBtn3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/answerBtn_height"
        android:layout_marginTop="6dp"
        android:layout_weight="0.20"
        android:background="?attr/listChoiceBackgroundIndicator"
        android:backgroundTint="?attr/colorControlActivated"
        android:onClick="checkAnswer"
        android:text="Answer3"
        android:textColor="@color/colorAccent"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/answerBtn4"
        android:layout_width="390dp"
        android:layout_height="@dimen/answerBtn_height"
        android:layout_marginTop="6dp"
        android:layout_weight="0.22"
        android:background="?attr/listChoiceBackgroundIndicator"
        android:backgroundTint="?attr/colorControlActivated"
        android:onClick="checkAnswer"
        android:text="Answer4"
        android:textColor="@color/colorAccent"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />


</LinearLayout>
